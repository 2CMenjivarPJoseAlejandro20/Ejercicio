#include <iostream>
using namespace std;

string parimpar(int num); //prototipo de funcion

int main(){
int numero;
string cadena;
cout << "ingrese el numero: ";
cin >> numero;
cadena = parimpar(numero);
cout << "el numero es: " << cadena;
return 0;
}
string parimpar(int num){
string resultado;
if(nume%2==0){
resultado = "par";
}else if  (num%2==1){
resultado = "impar";
}
return resultado;
}
